<html>
    <head>
        <style>
            *{
                font-family:system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }
            body{
                background-color: #f0f0f3;
                display: flex;
                flex-flow: wrap row;
                align-items: center;
                justify-content: center;
            }
            section{     
                padding: 0px 30px;   
                display: flex;
                flex-flow: wrap row;  
                box-shadow: -8px -8px 20px #ffffff, 8px 8px 20px #aeaec0;
                justify-content: center;
                width: 28%;
            }
            section h1{
               box-shadow: inset -10px -10px 20px #ffffff, inset 5px 5px 15px #aeaec0;    
                padding: 8px 20px;
                border-radius: 40px;
                margin: 15px;
                font-size: 28px;
                text-align: center;
            }
            section a{
                margin: 15px 0;
                padding:10px 20px;
                text-decoration: none;
                font-size: 22px;
                border-radius: 40px;  
                 box-shadow: -8px -8px 18px #ffffff, 8px 8px 18px #aeaec0;             
                font-weight: bold;
                color:red;
            }
            section a:hover{
                transition: 0.2s;
                color: black;
                box-shadow: inset -10px -10px 20px #ffffff, inset 5px 5px 15px #aeaec0;    
            }
            section img{
                box-shadow: inset 10px 10px 15px darkgray;
                padding: 10px;
                margin: 50px 0px;
            }
        </style>
    </head>
    <body>
        <section>
                <img src="qr.jpg" width="100%">
        </section>
    </body>
</html>